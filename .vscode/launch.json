{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "${workspaceFolder}/Lucid/vscode-extension",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/Lucid/vscode-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/Lucid/vscode-extension/out/**/*.js"
            ],
            "preLaunchTask": "npm: compile"
        }
    ]
}
